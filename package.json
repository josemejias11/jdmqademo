{
  "name": "jdmqademo",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Full-stack React and Express demo application",
  "scripts": {
    "start": "react-scripts start",
    "frontend": "react-scripts start",
    "backend": "tsx watch server/server.ts",
    "server": "tsx server/server.ts",
    "dev": "concurrently \"npm run frontend\" \"npm run backend\"",
    "build": "react-scripts build",
    "build:server": "tsc -p tsconfig.server.json",
    "build:all": "npm run build && npm run build:server",
    "lint": "eslint src server e2e --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint src server e2e --ext .js,.jsx,.ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "type-check:server": "tsc -p tsconfig.server.json --noEmit",
    "prettier": "prettier --write .",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx}\" \"server/**/*.{ts,js}\" \"e2e/src/**/*.{ts,js}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx}\" \"server/**/*.{ts,js}\" \"e2e/src/**/*.{ts,js}\"",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:webkit": "playwright test --project=webkit",
    "test:e2e:mobile": "playwright test --project=\"Mobile Safari\" --project=\"Mobile Chrome\"",
    "test:e2e:visual": "playwright test e2e/src/specs/visual",
    "test:e2e:smoke": "playwright test e2e/src/specs/smoke",
    "test:e2e:api": "playwright test e2e/src/specs/api",
    "test:e2e:report": "playwright show-report",
    "test:e2e:clean": "rimraf test-results playwright-report",
    "install:browsers": "playwright install"
  },
  "dependencies": {
    "@fontsource/inter": "^5.2.6",
    "@fontsource/montserrat": "^5.2.6",
    "@fontsource/poppins": "^5.2.6",
    "@fontsource/roboto": "^5.2.6",
    "axios": "^1.6.2",
    "bootstrap": "^5.3.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "formik": "^2.4.5",
    "jsonwebtoken": "^9.0.2",
    "react": "^18.2.0",
    "react-bootstrap": "^2.10.10",
    "react-dom": "^18.2.0",
    "react-icons": "^4.12.0",
    "react-router-dom": "^6.20.0",
    "react-scripts": "^5.0.1",
    "yup": "^1.3.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.53.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.42",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "concurrently": "^7.6.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-playwright": "^2.2.0",
    "eslint-plugin-prettier": "^5.4.1",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "tsx": "^4.7.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": "20.11.1",
    "npm": ">=10.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
