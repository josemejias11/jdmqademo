{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:playwright/playwright-test"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "playwright"
  ],
  "rules": {
    "@typescript-eslint/no-unused-vars": ["warn"],
    "no-console": "warn"
  },
  "overrides": [
    {
      "files": ["*.spec.ts"],
      "rules": {
        "testing-library/prefer-screen-queries": "off"
      }
    }
  ]
}